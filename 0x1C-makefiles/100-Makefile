CC = gcc
NAME = school
SRC = main.c school.c
RM = /bin/rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
    $(CC) $(CFLAGS) $^ -o $@

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

clean:
    $(RM) -f *~ $(NAME)

oclean:
    $(RM) -f *.o

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

# Check if m.h exists
ifeq ($(wildcard m.h),)
    $(error "m.h not found")
endif
